  email = nenegi.01mo@gmail.com
  signingkey = ~/.ssh/id_ed25519_github.pub

[gpg]
  format = ssh

[includeIf "gitdir:~/ghe/"]
  path = ~/.config/git/config.ghe

[includeIf "gitdir:~/github_hpeprod/"]
  path = ~/.config/git/config.github_hpeprod

[include]
  path = ~/.config/git/config.proxy

[core]
  editor = nvim
  pager = "LESSCHARSET=utf-8 less"
  fscache = true
  preloadindex = true
  quotepath = false

[color]
  ui = auto

[column]
  ui = auto

[grep]
  lineNumber = true

[init]
  defaultBranch = main

[status]
  showUntrackedFiles = all

[commit]
  gpgsign = true
  template = ~/.config/git/message

[tag]
  gpgsign = true
  sort = version:refname

[fetch]
  prune = true
  pruneTags = true
  all = true

[push]
  default = current
  autoSetupRemote = true
  followTags = true

[pull]
  rebase = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[transfer]
  fsckobjects = true

[credential]
  helper = store

[diff]
  tool = nvimdiff
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  noprefix = true
  renames = true

[diff "ansible-vault"]
  textconv = ansible-vault view

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE

[merge]
  tool = nvimdiff
  conflictstyle = diff3

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "nvimdiff"]
  cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

[rerere]
  enabled = true
  autoupdate = true

[alias]
  commend = commit --amend --no-edit
  graph = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ >> .gitignore ;}; gi"
  it = !git init && git commit -m "init" --allow-empty
  please = push --force-with-lease --force-if-includes

[lfs]
  locksverify = false

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
