  email = nenegi.01mo@gmail.com
  signingkey = 31387B7CE9FEBBFE

[gpg]
  program = gpg

[includeIf "gitdir:~/ghe/"]
  path = ~/.config/git/config.local

[core]
  editor = nvim
  fscache = true
  preloadindex = true
  quotepath = false

[color]
  ui = auto

[grep]
  lineNumber = true

[status]
  showUntrackedFiles = all

[commit]
  gpgsign = true

[tag]
  gpgsign = true

[fetch]
  prune = true

[push]
  default = current
  followTags = true

[pull]
  rebase = true

[transfer]
  fsckobjects = true

[credential]
  helper = store

[diff]
  tool = nvimdiff
  noprefix = true
  renames = true

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE

[diff "ansible-vault"]
  textconv = ansible-vault view

[diff "xlsx"]
  binary = true
  textconv = git-xlsx-textconv

[merge]
  tool = nvimdiff
  conflictstyle = diff3

[mergetool]
  keepBackup = false

[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[alias]
  co = checkout
  commend = commit --amend --no-edit
  graph = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  it = !git init && git commit -m "init" --allow-empty
  please = push --force-with-lease

[lfs]
  locksverify = false

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
