[user]
  name = Yoshio Sugiyama
  email = nenegi.01mo@gmail.com
  signingkey = 31387B7CE9FEBBFE

[gpg]
  program = gpg

[includeIf "gitdir:~/ghe/"]
  path = ~/.config/git/config.local

[include]
  path = ~/.config/git/config.proxy

[core]
  editor = nvim
  fscache = true
  preloadindex = true
  quotepath = false

[color]
  ui = auto

[grep]
  lineNumber = true

[init]
  defaultBranch = main

[status]
  showUntrackedFiles = all

[commit]
  gpgsign = true
  template = ~/.config/git/message

[tag]
  gpgsign = true

[fetch]
  prune = true

[push]
  default = current
  followTags = true

[pull]
  rebase = true

[transfer]
  fsckobjects = true

[credential]
  helper = store

[diff]
  tool = nvimdiff
  noprefix = true
  renames = true

[diff "ansible-vault"]
  textconv = ansible-vault view

[diff "jupyternotebook"]
  command = git-nbdiffdriver diff -s -m

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE

[difftool "nbdime"]
  cmd = git-nbdifftool diff \"$LOCAL\" \"$REMOTE\" \"$BASE\"

[merge]
  tool = nvimdiff
  conflictstyle = diff3

[merge "jupyternotebook"]
  driver = git-nbmergedriver merge %O %A %B %L %P
  name = jupyter notebook merge driver

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[mergetool "nbdime"]
  cmd = git-nbmergetool merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"

[alias]
  co = checkout
  commend = commit --amend --no-edit
  graph = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ >> .gitignore ;}; gi"
  it = !git init && git commit -m "init" --allow-empty
  please = push --force-with-lease --force-if-includes

[lfs]
  locksverify = false

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
