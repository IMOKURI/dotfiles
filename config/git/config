[user]
  name = IMOKURI
  email = nenegi.01mo@gmail.com

[includeIf "gitdir:~/ghe/"]
  path = ~/.config/git/config.local

[core]
  editor = nvim
  fscache = true
  preloadindex = true
  quotepath = false

[color]
  ui = auto

[grep]
  lineNumber = true

[status]
  showUntrackedFiles = all

[fetch]
  prune = true

[push]
  default = current
  followTags = true

[transfer]
  fsckobjects = true

[credential]
  helper = store

[diff]
  tool = nvimdiff

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE

[diff "ansible-vault"]
  textconv = ansible-vault view

[diff "xlsx"]
  binary = true
  textconv = git-xlsx-textconv

[merge]
  tool = nvimdiff
  conflictstyle = diff3

[mergetool]
  keepBackup = false

[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[alias]
  a = add
  b = branch
  c = commit
  co = checkout
  dc = diff --cached
  d = diff
  dd = difftool
  graph = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  m = merge
  s = status
