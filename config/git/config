[protocol]
  version = 2

[user]
  name = IMOKURI
  email = nenegi.01mo@gmail.com

[includeIf "gitdir:~/ghe/"]
  path = ~/.config/git/config.local

[includeIf "gitdir:/mnt/c/Users/sugiyayo/Documents/GitHub/"]
  path = ~/.config/git/config.local

[core]
  editor = nvim
  fscache = true
  preloadindex = true
  quotepath = false

[color]
  ui = auto

[status]
  showUntrackedFiles = all

[fetch]
  prune = true

[push]
  default = current
  followTags = true

[transfer]
  fsckobjects = true

[url "git@github.com:"]
  pushInsteadOf = https://github.com/

[diff]
  tool = nvimdiff2

[difftool]
  prompt = false

[difftool "nvimdiff2"]
  cmd = nvim -d $LOCAL $REMOTE
  trustExitCode = true

[merge]
  tool = nvimdiff4

[mergetool "nvimdiff4"]
  cmd = nvim -f -c "Gdiff" "$MERGED"
  trustExitCode = true

[alias]
  a = add
  b = branch
  c = commit
  co = checkout
  dc = diff --cached
  d = diff
  dd = difftool
  g = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  s = status
