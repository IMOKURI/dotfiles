[user]
  name = IMOKURI
  email = nenegi.01mo@gmail.com

[includeIf "gitdir:~/ghe/"]
  path = ~/.gitconfig.local

[includeIf "gitdir:/mnt/c/Users/sugiyayo/Documents/GitHub/"]
  path = ~/.gitconfig.local

[core]
  editor = vi
  fscache = true
  preloadindex = true
  quotepath = false
  excludesfile = ~/.gitignore.global

[color]
  ui = auto

[status]
  showUntrackedFiles = all

[push]
  default = current
  followTags = true

[transfer]
  fsckobjects = true

[url "git@github.com:"]
  pushInsteadOf = https://github.com/

[diff]
  tool = nvimdiff2

[difftool "nvimdiff2"]
  cmd = nvim -d $LOCAL $REMOTE
  trustExitCode = true

[merge]
  tool = nvimdiff4

[mergetool "nvimdiff4"]
  cmd = nvim -f -c "Gdiff" "$MERGED"
  trustExitCode = true

[alias]
  a = add
  b = branch
  c = commit
  co = checkout
  dc = diff --cached
  d = diff
  fp = !git fetch -p && git-delete-merged-branches.sh
  g = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  pp = !git pull -p && git-delete-merged-branches.sh
  s = status
